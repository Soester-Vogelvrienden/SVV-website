<!DOCTYPE html>
<html lang="nl" class="bg-yellow-200">

<head>
	{% include "head.njk" %}
</head>

<body class="bg-yellow-50">
	{% include "header.njk" %}

	<div class="flex flex-col lg:flex-row">
		<!-- Sidebar -->
		{% include "sidebar.njk" %}

		<div class="max-w-2xl my-10 mx-auto bg-white shadow-lg rounded-xl">
			<div class="p-6 sm:p-8 w-full">	
				<form name="contact" method="POST" action="/contact/succes" netlify>
					<input type="hidden" name="form-name" value="{{ formname }}">

					<fieldset class="grid grid-cols-1 gap-4">
						<h1 class="text-center text-3xl font-bold">{{ title }}</h1>

						<div class="text-sm text-gray-700 prose max-w-none">
							{{ content | safe }}
						</div>

						<div>
							<label for="naam" class="block text-lg font-medium text-gray-700">Naam</label>
							<input type="text" id="naam" name="naam" required placeholder="Schrijf hier een naam"
								class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 text-lg" />
						</div>

						<div>
							<label for="email" class="block text-lg font-medium text-gray-700">E-mailadres</label>
							<input type="email" id="email" name="email" required placeholder="mailadres@website.nl"
								class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 text-lg" />
						</div>

						<div>
							<label for="nummer" class="block text-lg font-medium text-gray-700">Telefoonnummer
								(optioneel)</label>
							<input type="tel" id="nummer" name="nummer" placeholder="06-12345678"
								class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 text-lg" />
						</div>

						<div>
							<label for="bericht" class="block text-lg font-medium text-gray-700">Uw bericht</label>
							<textarea id="bericht" name="bericht" required
								class="mt-1 w-full h-48 px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 text-lg resize-y"></textarea>
						</div>

						<div class="text-center mt-4">
							<button type="submit"
								class="button">
								Verstuur bericht
							</button>
						</div>
					</fieldset>
				</form>
			</div>
		</div>
	</div>

	{% include "footer.njk" %}

</body>

</html>